FROM node:18-bookworm-slim

WORKDIR /app

# Install backend deps first (better cache)
COPY backend/package.json backend/package-lock.json ./backend/
RUN npm --prefix backend ci --omit=dev --no-audit --no-fund

# Copy app source
COPY . .

ENV NODE_ENV=production
EXPOSE 8080

WORKDIR /app/backend
CMD ["node", "index.js"]
